# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_USER=go_app_user
DB_PASSWORD=go_app_password
DB_NAME=go_app_db

# Application Configuration
PORT=8080
GIN_MODE=release

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
